    "version": "0.2.0",
    "configurations": [
        {
            "name": "next dev",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "dev"
            ],
        },
        {
            "name": "Python: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "python": "${command:python.interpreterPath}",
            "args": [
                "api.main:app",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}/backend" 
        },

    ]
}